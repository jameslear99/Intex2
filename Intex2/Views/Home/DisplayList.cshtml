@{

}

@model MummyViewModel

<div>

    @foreach (Burialmain m in Model.Mummies)
    {
        @if (Model.BridgeTable != null && Model.BridgeTable.Any(bt => bt.MainBurialmainid == m.Id))
        {
            <div class="card card-outline-primary m-2 p-2">
                <div class="bg-light p-1">
                    <h4>Title Something</h4>
                </div>
                <div>
                    <ul>
                        <li>@m.Id</li>
                        <li>@m.Sex</li>
                        <li>@m.Depth</li>

                        @if (Model.BridgeTable != null && Model.BridgeTable.Any(bt => bt.MainBurialmainid == m.Id))
                        {

                            @foreach (var bt in Model.BridgeTable.Where(bt => bt.MainBurialmainid == m.Id))
                            {
                                var textile = Model.Textiles.Single(t => t.Id == bt.MainTextileid);
                                if (textile != null)
                                {

                                    <li>Textile Id: @textile.Id</li>
                                    <li>Description: @textile.Description</li>
                                    <li>Locale: @textile.Locale</li>

                                }
                            }


                        }
                    </ul>
                </div>
            </div>
        }
}


    <div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-outline-dark"
         page-class-selected="btn-primary" class="btn-group pull-right m-1 pagecenter"></div>
</div>

