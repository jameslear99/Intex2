@{
}
@model MummyViewModel

<div class="card card-outline-primary m-2 p-2">
    <div class="bg-light p-1">
        <h4>
            Mummy Record Details
        </h4>
    </div>
    <div class="container">
        @if (Model == null)
        {
            <p>No Textile to show</p>
        }
        else
        {
            <h6 class="row">Geographical Location</h6>
            <div class="row">
                <div class="col-2"></div>
                <div class="col-2"></div>
                <div class="col-2"></div>
                <div class="col-2"></div>
                <div class="col-2"></div>
                <div class="col-2"></div>
            </div>

            <div class="row">
                <form method="get" asp-controller="Home" asp-action="AddTextile">
                    <input type="hidden" name="Id" value="Model.Id" />

                    <button type="submit" class="btn btn-sm">Add Textile</button>
                </form>
            </div>


        }

        <a>Add Textile</a>
    </div>
</div>